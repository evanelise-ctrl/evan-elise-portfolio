---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Cisco Spaces | Evan Elise">
  <main class="bg-black text-white min-h-screen">
    
    <div style="height: 100px; width: 100%;"></div>

    <header class="px-[10%]"> 
      <div class="max-w-6xl mx-auto">
        <span style="color: #ff0080; font-weight: 700; text-transform: uppercase; letter-spacing: 0.4em; font-size: 10px; margin-bottom: 32px; display: block;">
          Creative Producer â€¢ Emotion Studios
        </span>
        
        <h1 style="font-size: clamp(3.5rem, 8vw, 8rem); font-weight: 900; text-transform: uppercase; letter-spacing: -0.05em; line-height: 0.85; margin-bottom: 64px;">
          Cisco <span class="italic text-glow" style="color: #ff0080;">Spaces</span>
        </h1>
        
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 80px; margin-bottom: 100px;">
          <p style="font-size: 1.5rem; line-height: 1.2; font-weight: 500; color: white;">
            Bridging the gap between high-level brand storytelling and performance-driven digital marketing. For Cisco Spaces, I lead end-to-end production that scales across global channels.
          </p>
          <div style="color: rgba(255,255,255,0.5); font-size: 1.1rem; line-height: 1.6;">
            <p style="margin-bottom: 20px;">
              My role involves directing global product launches, managing technical infrastructure for large-scale webinars, and serving as the on-site creative lead for major industry events.
            </p>
            <p>
              By focusing on content atomization, I ensure that every flagship campaign generates a diverse ecosystem of assets optimized for specific product outcomes.
            </p>
          </div>
        </div>

        <div style="display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 40px; padding-top: 48px; border-top: 1px solid rgba(255,255,255,0.1); margin-bottom: 120px;">
          <div>
            <p style="color: rgba(255,255,255,0.3); font-size: 10px; text-transform: uppercase; letter-spacing: 0.2em; margin-bottom: 8px;">Focus</p>
            <p style="font-size: 13px; font-weight: 700; text-transform: uppercase;">Global Strategy</p>
          </div>
          <div>
            <p style="color: rgba(255,255,255,0.3); font-size: 10px; text-transform: uppercase; letter-spacing: 0.2em; margin-bottom: 8px;">Channels</p>
            <p style="font-size: 13px; font-weight: 700; text-transform: uppercase;">Social & Web</p>
          </div>
          <div>
            <p style="color: rgba(255,255,255,0.3); font-size: 10px; text-transform: uppercase; letter-spacing: 0.2em; margin-bottom: 8px;">Materials</p>
            <p style="font-size: 13px; font-weight: 700; text-transform: uppercase;">Social, Web, Webinar</p>
          </div>
        </div>
      </div>
    </header>

    <section class="px-[10%] mb-32">
        <h2 style="font-size: 10px; font-weight: 900; text-transform: uppercase; letter-spacing: 0.3em; color: rgba(255,255,255,0.4); margin-bottom: 40px;">01 / Flagship Campaign</h2>
        <div class="asset-trigger group cursor-pointer rounded-xl overflow-hidden bg-neutral-900 shadow-2xl relative" data-type="video" data-src="/spaces-launch.mp4">
          <video autoplay muted loop playsinline preload="auto" class="w-full h-auto block">
            <source src="/spaces-launch.mp4" type="video/mp4" />
          </video>
          <div class="absolute inset-0 bg-black/0 group-hover:bg-black/40 transition-all flex items-center justify-center text-center">
            <div class="opacity-0 group-hover:opacity-100 transition-all bg-white/10 backdrop-blur-md px-6 py-3 rounded-full border border-white/20 text-[10px] uppercase tracking-widest font-bold">Watch Full Film</div>
          </div>
        </div>
    </section>

    <section class="px-[10%] py-32 border-t border-white/5">
        <h2 style="font-size: 10px; font-weight: 900; text-transform: uppercase; letter-spacing: 0.3em; color: rgba(255,255,255,0.4); margin-bottom: 64px;">02 / Campaign Ecosystem</h2>
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 48px;">
            
            <div class="space-y-4">
                <div class="asset-trigger group cursor-pointer rounded-lg overflow-hidden bg-neutral-900 border border-white/5 shadow-lg relative" data-type="video" data-src="/spaces-social-1.mp4">
                    <video autoplay muted loop playsinline class="w-full h-auto block"><source src="/spaces-social-1.mp4" type="video/mp4" /></video>
                    <div class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition-all flex items-center justify-center text-[8px] uppercase font-bold opacity-0 group-hover:opacity-100 tracking-widest">Expand View</div>
                </div>
                <p style="font-size: 9px; color: rgba(255,255,255,0.3); text-transform: uppercase; letter-spacing: 0.1em;">Performance Ad 01</p>
            </div>

            <div class="space-y-4">
                <div class="asset-trigger group cursor-pointer rounded-lg overflow-hidden bg-neutral-900 border border-white/5 shadow-lg relative" data-type="video" data-src="/spaces-social-2.mp4">
                    <video autoplay muted loop playsinline class="w-full h-auto block"><source src="/spaces-social-2.mp4" type="video/mp4" /></video>
                    <div class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition-all flex items-center justify-center text-[8px] uppercase font-bold opacity-0 group-hover:opacity-100 tracking-widest">Expand View</div>
                </div>
                <p style="font-size: 9px; color: rgba(255,255,255,0.3); text-transform: uppercase; letter-spacing: 0.1em;">Performance Ad 02</p>
            </div>

            <div class="space-y-4">
                <div class="asset-trigger group cursor-pointer rounded-lg overflow-hidden bg-neutral-900 border border-white/5 shadow-lg relative" data-type="video" data-src="/spaces-hero.mp4">
                    <video autoplay muted loop playsinline class="w-full h-auto block"><source src="/spaces-hero.mp4" type="video/mp4" /></video>
                    <div class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition-all flex items-center justify-center text-[8px] uppercase font-bold opacity-0 group-hover:opacity-100 tracking-widest">Expand View</div>
                </div>
                <p style="font-size: 9px; color: rgba(255,255,255,0.3); text-transform: uppercase; letter-spacing: 0.1em;">Hero Moment</p>
            </div>

            <div class="space-y-4">
                <div class="asset-trigger group cursor-pointer rounded-lg overflow-hidden bg-neutral-900 border border-white/5 shadow-lg relative" data-type="video" data-src="/spaces-webinar.mp4">
                    <video autoplay muted loop playsinline class="w-full h-auto block"><source src="/spaces-webinar.mp4" type="video/mp4" /></video>
                    <div class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition-all flex items-center justify-center text-[8px] uppercase font-bold opacity-0 group-hover:opacity-100 tracking-widest">Expand View</div>
                </div>
                <p style="font-size: 9px; color: rgba(255,255,255,0.3); text-transform: uppercase; letter-spacing: 0.1em;">Webinar Direction</p>
            </div>

            <div class="space-y-4">
                <div class="asset-trigger group cursor-pointer rounded-lg overflow-hidden bg-neutral-900 border border-white/5 shadow-lg relative" data-type="video" data-src="/spaces-webinar-promo.mp4">
                    <video autoplay muted loop playsinline class="w-full h-auto block"><source src="/spaces-webinar-promo.mp4" type="video/mp4" /></video>
                    <div class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition-all flex items-center justify-center text-[8px] uppercase font-bold opacity-0 group-hover:opacity-100 tracking-widest">Expand View</div>
                </div>
                <p style="font-size: 9px; color: rgba(255,255,255,0.3); text-transform: uppercase; letter-spacing: 0.1em;">Webinar Promo</p>
            </div>

            <div class="space-y-4">
                <div class="asset-trigger group cursor-pointer rounded-lg overflow-hidden bg-neutral-900 border border-white/5 shadow-lg relative" data-type="image" data-src="/spaces-ui.gif">
                    <img src="/spaces-ui.gif" class="w-full h-auto block" alt="Recognition" />
                    <div class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition-all flex items-center justify-center text-[8px] uppercase font-bold opacity-0 group-hover:opacity-100 tracking-widest">Expand View</div>
                </div>
                <p style="font-size: 9px; color: rgba(255,255,255,0.3); text-transform: uppercase; letter-spacing: 0.1em;">Recognition Asset</p>
            </div>
            
        </div>
    </section>

    <footer class="px-[10%] py-20 border-t border-white/5 text-center">
       <a href="/#featured-work" class="text-[10px] uppercase tracking-[0.5em] text-white/30 hover:text-[var(--accent)] transition-all">
         Back to Work
       </a>
    </footer>

  </main>

  <div id="universal-lightbox" style="display: none; position: fixed; top: 0; left: 0; width: 100vw; height: 100vh; background: rgba(0,0,0,0.95); backdrop-filter: blur(20px); z-index: 99999;">
    
    <button id="close-lightbox" style="position: absolute; top: 30px; right: 40px; color: rgba(255,255,255,0.5); font-size: 60px; font-weight: 100; background: none; border: none; cursor: pointer; z-index: 100000; line-height: 0.5;">&times;</button>
    
    <div style="width: 100%; height: 100%; display: flex; align-items: center; justify-content: center; padding: 40px; pointer-events: none;">
      <div style="width: 100%; max-width: 1200px; position: relative; pointer-events: auto;">
        
        <div id="lightbox-vimeo-container" style="display: none; width: 100%; padding-top: 56.25%; position: relative; background: #000; border-radius: 12px; overflow: hidden; box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);">
          <iframe id="lightbox-iframe" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%;" frameborder="0" allow="autoplay; fullscreen; picture-in-picture"></iframe>
        </div>

        <img id="lightbox-img" style="display: none; width: 100%; height: auto; max-height: 85vh; object-fit: contain; border-radius: 12px; box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);" src="" />

        <video id="lightbox-video" style="display: none; width: 100%; height: auto; max-height: 85vh; border-radius: 12px; box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);" controls autoplay>
          <source src="" type="video/mp4" />
        </video>

      </div>
    </div>
  </div>
</MainLayout>

<script is:inline>
  const triggers = document.querySelectorAll('.asset-trigger');
  const lightbox = document.getElementById('universal-lightbox');
  const lbIframeContainer = document.getElementById('lightbox-vimeo-container');
  const lbIframe = document.getElementById('lightbox-iframe');
  const lbImg = document.getElementById('lightbox-img');
  const lbVideo = document.getElementById('lightbox-video');
  const closeBtn = document.getElementById('close-lightbox');

  triggers.forEach(trigger => {
    trigger.addEventListener('click', () => {
      const type = trigger.getAttribute('data-type');
      const src = trigger.getAttribute('data-src');

      // 1. Reset all states
      lbIframeContainer.style.display = 'none';
      lbImg.style.display = 'none';
      lbVideo.style.display = 'none';
      lbIframe.src = '';
      lbVideo.pause();

      setTimeout(() => {
        // 2. Load correct media
        if (type === 'vimeo') {
          lbIframe.src = `https://player.vimeo.com/video/${src}?autoplay=1&muted=0&badge=0`;
          lbIframeContainer.style.display = 'block';
        } else if (type === 'image') {
          lbImg.src = src;
          lbImg.style.display = 'block';
        } else if (type === 'video') {
          lbVideo.querySelector('source').src = src;
          lbVideo.load();
          lbVideo.style.display = 'block';
        }

        // 3. Show Lightbox
        lightbox.style.display = 'block';
        document.body.style.overflow = 'hidden';
      }, 10);
    });
  });

  const closeLightbox = () => {
    lightbox.style.display = 'none';
    lbIframe.src = '';
    lbVideo.pause();
    document.body.style.overflow = '';
  };

  closeBtn.addEventListener('click', closeLightbox);
  lightbox.addEventListener('click', (e) => {
    if (e.target === lightbox || e.target.classList.contains('flex')) {
      closeLightbox();
    }
  });
</script>

<style>
  .text-glow {
    text-shadow: 0 0 50px rgba(255, 0, 128, 0.4);
  }
  .asset-trigger {
    position: relative;
    transition: transform 0.3s ease;
  }
  .asset-trigger:hover {
    transform: scale(1.02);
  }
</style>